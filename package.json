{
  "name": "meist",
  "version": "1.0.0",
  "description": "An issue tracker based on on mern",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -w dist dist/server.js",
    "start:hook": "nodemon -w server server/start_hook.js",
    "compile:server": "babel server --out-dir dist --source-maps",
    "watch:server": "babel server --out-dir dist --source-maps --watch",
    "compile": "webpack",
    "pretest": "npm run compile && npm run lint && npm run compile:release",
    "watch": "webpack-dev-server  --hot --inline",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext js,jsx src server webpack.config.js",
    "lint:fix": "npm run lint --fix",
    "dev": "npm run watch & npm run watch:server & npm start",
    "dev:hook": "npm run watch & npm run start:hook"
  },
  "pre-commit": [
    "compile",
    "lint"
  ],
  "author": "acellam guy",
  "license": "Apache-2.0",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "mongodb": "^3.0.1",
    "prop-types": "^15.6.0",
    "query-string": "^5.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "source-map-support": "^0.5.0",
    "swagger-ui-express": "^2.0.13",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "grunt": "1.0.1",
    "grunt-check-dependencies": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-eslint": "^20.1.0",
    "nodemon": "^1.14.6",
    "pre-commit": "^1.2.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-dev-server": "^2.9.7",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  }
}
